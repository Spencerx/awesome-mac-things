#!/usr/bin/env python
#coding=UTF-8

'''
计算文档中的文字总数
'''

import sys
import shutil
import os
import getopt 
import string

reload(sys) 
sys.setdefaultencoding( "utf-8" )

def usage():
    print "usage: word_count doc_name"

def main():
    opts,args = getopt.getopt(sys.argv[1:],'',[])

    argc = len(args)
    if argc < 1:
        print "Invalid argument count."
        sys.exit(1) 

    fname = args[0]

    print '-'*10 + 'start wordcount for  %s' % fname + '-'*10

    count = 0
    with open(fname) as f:
        for line in f:
            line = line.strip()
            if line != '':
                line = line.replace(" ","")
                count = count + len(line.decode('utf-8'))

    print '-'*10 + 'total word: %s' % count + '-'*10

if __name__ == "__main__":
    main()