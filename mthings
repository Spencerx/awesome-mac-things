
#!/bin/bash

export MTHINGS_DIR=$(dirname $0) 

# load common lib functions
source $MTHINGS_DIR/common-sh

if [ $# = 0 ];then
    print_column 'Usage '
    print_column " mthings list\t: show all commands \nmthings command\t: execute a command\nmthings update\t: update mthings\nmthings uninstall\t: uninstall mthings"
    exit
fi

if [ "$1" = "list" ];then 
    list_command "$@"
fi

tools_dir=$MTHINGS_DIR/bin/
command_file=$1;shift
command=`find $tools_dir -maxdepth 1 -name $command_file `

if [ ! -f "$command" ]; then
	echo "$command_file command not found!"
	exit 1;
fi

exec "$command" "$@"